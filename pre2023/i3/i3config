workspace $workspace6 output HDMI-1
# exec --no-startup-id i3-msg $workspace6

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 1 px or 1 ppt
        bindsym k resize grow height 1 px or 1 ppt
        bindsym l resize shrink height 1 px or 1 ppt
        bindsym ae resize grow width 1 px or 1 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 1 px or 1 ppt
        bindsym Down resize grow height 1 px or 1 ppt
        bindsym Up resize shrink height 1 px or 1 ppt
        bindsym Right resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

#                        background   border
#                        (border)     (background)  text       indicator
client.focused           #000000      #CCCCCC       #000000    #CCCCCC
client.unfocused         #000000      #343434       #000000    #343434
client.focused_inactive  #000000      #000000       #000000    #000000
client.urgent            #000000      #000000       #000000    #000000

new_window pixel 2

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c ~/dotfiles/i3blocks.conf
	colors {
		background #232323
		separator  #111111
	#                     border    background   text
		focused_workspace   #333333   #333333      #ffffff
		inactive_workspace  #333333   #333333      #777777
		urgent_workspace    #4E1111   #4E1111      #DD0000
	}
}


########Additional Settings########

# when using bindsym:
# Mod1 = Alt
# Mod2 = NumLock
# Mod3 = unused as far as I know
# Mod4 = Windows-key = $mod
# Mod5 = Alt Gr

# Multimedia Key-binds
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer -c 0 set Master 2dB+ unmute  ; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer -c 0 set Master 2dB- unmute  ; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioMute exec --no-startup-id "amixer -q set Master toggle ; pkill -RTMIN+1 i3blocks"

# Toggle Touchpad
bindsym XF86TouchpadToggle exec bash ~/dotfiles/toggletouchpad.sh


# Set screenshot shortcut and save in ~/Pictures/screenshots/ with date
#
# PrtSc => screenshot
bindcode 107 exec --no-startup-id scrot $HOME/Pictures/Screenshots/`date +%Y-%m-%d_%H.%M.%S`.png
#
# mod+PrtSc => screenshot of selected window
bindcode $mod+107 exec --no-startup-id scrot -u $HOME/Pictures/Screenshots/`date +%Y-%m-%d_%H.%M.%S`.png

# Keybind for lock screen mod+alt(64)+L(?)
bindsym $mod+Mod1+l exec --no-startup-id i3lock -g

# setting matlab plots to appear on desktop 9
assign [title="^Fig"] $workspace9
assign [class="Firefox"] $workspace2

# set wallpaper
exec_always --no-startup-id nitrogen --restore

# start nm-applet for managing network connections
exec --no-startup-id nm-applet

# remove title-bar on window
# (workaround for compositor issue)
# (traced background when opening vertical windows)
#new_window none

# start compositor, enable transperancy
exec --no-startup-id compton -e.5

# set gaps between windows (using i3-gaps)
gaps inner 17
gaps outer -4


